{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./demo-example/out-tsc",
    "baseUrl": "demo-example",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "noStrictGenericChecks": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2016",
      "dom"
    ]
  },
  "include": [
    "example/**/*.ts",
    "src/**/*.ts"
  ]
}
